<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ncf.NcfSelectionDialog" owl="1">
        <Dialog title="'Seleccionar Tipo de Comprobante'" size="'md'">
            <div class="ncf-selection-list">
                <t t-foreach="props.ncfTypes" t-as="ncfType" t-key="ncfType.code">
                    <div class="ncf-selection-item" 
                         t-att-class="{ 'selected': ncfType.code === props.currentType }"
                         t-on-click="() => this.selectType(ncfType.code)">
                        <div class="ncf-selection-content">
                            <strong>B<t t-esc="ncfType.code"/></strong>
                            <span> - </span>
                            <t t-esc="ncfType.name"/>
                        </div>
                        <i t-if="ncfType.code === props.currentType" class="fa fa-check text-success"/>
                    </div>
                </t>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="cancel">Cancelar</button>
            </t>
        </Dialog>
    </t>
</templates>
