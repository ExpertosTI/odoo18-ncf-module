<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_ncf" model="ir.ui.view">
        <field name="name">pos.config.form.ncf</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Comprobantes Fiscales (NCF)" name="ncf_settings">
                    <field name="enable_ncf"/>
                    <field name="default_ncf_sequence_id" 
                           invisible="enable_ncf == False"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
