<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_ncf" model="ir.ui.view">
            <field name="name">account.move.form.inherit.ncf</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="toggle_use_ncf" 
                            type="object"
                            string="Usar NCF"
                            invisible="use_ncf or move_type != 'out_invoice'"/>
                    <button name="toggle_use_ncf" 
                            type="object"
                            string="Quitar NCF"
                            invisible="not use_ncf or move_type != 'out_invoice'"/>
                </header>
                <field name="payment_reference" position="after">
                    <field name="use_ncf" invisible="1"/>
                    <field name="ncf" 
                           invisible="not use_ncf or move_type != 'out_invoice'"
                           readonly="state != 'draft'"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
