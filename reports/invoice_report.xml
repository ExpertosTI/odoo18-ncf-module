<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Plantilla de reporte simplificada para facturas con NCF -->
    <template id="report_invoice_document_ncf" inherit_id="account.report_invoice_document">
        
        <!-- Reemplazar el encabezado de la factura -->
        <xpath expr="//div[hasclass('page')]/h2" position="replace">
            <h2 class="mt-0 mb-3">
                <t t-if="o.use_ncf and o.ncf_fiscal_type_id">
                    <span t-field="o.ncf_fiscal_type_id.name"/>
                </t>
                <t t-else="">
                    Factura Final
                </t>
            </h2>
            
            <!-- Mostrar NCF como referencia de pago cuando estÃ© disponible -->
            <t t-if="o.use_ncf and o.ncf">
                <div class="row mb-3">
                    <div class="col-12">
                        <p class="mb-0"><strong>NCF:</strong> <span t-field="o.ncf"/></p>
                    </div>
                </div>
            </t>
        </xpath>

    </template>
</odoo>